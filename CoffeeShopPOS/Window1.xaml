<Window x:Class="CoffeeShopPOS.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoffeeShopPOS"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Title="Window1" Height="700" Width="1000">
    <Grid Background="Transparent">
        <Border Background="#FFFFFF"
                Panel.ZIndex="0">

            <Button Content="Pay" Width="350" Height="70" FontSize="18" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,40"/>
        </Border>
        <Border x:Name="Window_Edge"
                HorizontalAlignment="Stretch"
                BorderBrush="#242424"
                BorderThickness="10,10,10,10"
                Panel.ZIndex="1"/>
    </Grid>
</Window>
